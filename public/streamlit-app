# HTTPS Server Block (main)
server {
    listen 443 ssl;
    http2 on;
    server_name ~^(?<subdomain>.+)\.assessortools\.com$;
    
    client_max_body_size 200M;  # Allows up to 200MBâ€”adjust if your PDFs are larger (e.g., 500M)
    
    # SSL (managed by Certbot)
    ssl_certificate /etc/letsencrypt/live/assessortools.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/assessortools.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
    
    # Landing page at root
    location / {
        root /var/www/html;
        index index.html index.htm;
        try_files $uri $uri/ =404;
    }
    
    # LTHO Tool (/ltho proxies to port 8501) - Mirror this
    location /ltho/ {
        proxy_pass http://127.0.0.1:8501/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # Docs Tool (/docs proxies to port 8502)
    location /docs/ {
        proxy_pass http://127.0.0.1:8502/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";  # Dynamic for WebSockets
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }


    # Optional: Catch-all for other paths (e.g., if you add more later; proxies to LTHO as default)
    # location / {
    #     proxy_pass http://localhost:8501;
    #     proxy_http_version 1.1;
    #     proxy_set_header Upgrade $http_upgrade;
    #     proxy_set_header Connection "upgrade";
    #     proxy_set_header Host $host;
    #     proxy_set_header X-Real-IP $remote_addr;
    #     proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    #     proxy_set_header X-Forwarded-Proto $scheme;
    # }
}

# HTTP Redirect Block (managed by Certbot)
server {
    if ($host = assessortools.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    listen 80;
    server_name assessortools.com www.assessortools.com;
    return 404; # managed by Certbot
}
