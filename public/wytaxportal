# HTTPS for Root Domain (wydocsportal.com → county-landing.html)
server {
    listen 443 ssl;
    http2 on;
    server_name wydocsportal.com www.wydocsportal.com;

    client_max_body_size 200M;  # For PDF uploads/downloads

    # SSL (Certbot-managed)
    # ssl_certificate /etc/letsencrypt/live/wydocsportal.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/wydocsportal.com/privkey.pem;
    # include /etc/letsencrypt/options-ssl-nginx.conf;
    # ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Redirect www to non-www
    if ($host = 'www.wydocsportal.com') {
        return 301 https://wydocsportal.com$request_uri;
    }

    # Serve county-landing.html from isolated dir
    location / {
        root /var/www/html;
        index public-landing.html;
        try_files $uri $uri/ =404;
    }

    ssl_certificate /etc/letsencrypt/live/wydocsportal.com-0001/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/wydocsportal.com-0001/privkey.pem;

}

# HTTPS for Subdomains (*.wydocsportal.com → index.html + proxy to tool)
server {
    listen 443 ssl;
    http2 on;
    server_name ~^(?<subdomain>.+)\.wydocsportal\.com$;

    client_max_body_size 200M;

    # SSL (same wildcard cert)
    # ssl_certificate /etc/letsencrypt/live/wydocsportal.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/wydocsportal.com/privkey.pem;
    # include /etc/letsencrypt/options-ssl-nginx.conf;
    # ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Serve index.html from isolated dir
    location / {
        return 301 /search;
    }

    # Proxy tool path (e.g., /search → public docs.py)
    location /search/ {
        proxy_pass http://127.0.0.1:8503/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;  # Critical: Passes full subdomain (e.g., sweetwater.wydocsportal.com)
        proxy_set_header X-Forwarded-Host $host;  # Helps Streamlit build correct wss:// URLs
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 3600s;  # Long for PDF indexing/streaming
        proxy_send_timeout 3600s;
        proxy_connect_timeout 60s;
    }
}

# HTTP Redirect (Certbot-managed)
server {
    if ($host = www.wydocsportal.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    if ($host = wydocsportal.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    if ($host = 'wydocsportal.com') {
        return 301 https://$host$request_uri;
    }

    if ($host = 'www.wydocsportal.com') {
        return 301 https://wydocsportal.com$request_uri;
    }

    listen 80;
    server_name wydocsportal.com www.wydocsportal.com;
    return 404;
}